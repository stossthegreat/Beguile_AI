# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats during build time.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Path to your Flutter installation
flutter_application_path = File.expand_path('..', File.dirname(__FILE__))

# âœ… FIXED: Corrected to point to ios/Flutter/podhelper.rb instead of .ios
require File.expand_path(File.join(flutter_application_path, 'Flutter', 'podhelper.rb'))

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Install Flutter pods
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
